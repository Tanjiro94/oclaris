{
  "name": "oclaris",
  "private": true,
  "scripts": {
    "dev:front": "npm run dev -w front",
    "dev:back": "npm run dev -w back",
    "dev": "npm-run-all -p dev:front dev:back",
    "build:front": "npm run build -w front",
    "build:back": "npm run build -w back",
    "prepare": "command -v husky >/dev/null 2>&1 && husky || echo \"skip husky\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.1.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  }
}
